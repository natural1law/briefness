<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlideSwitch">
        <attr name="openBackground" format="reference"/>
        <attr name="closeBackground" format="reference"/>
        <attr name="slideImage" format="reference"/>
        <attr name="isOpen" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ScrollTextView">
        <attr name="clickEnable" format="boolean" />
        <attr name="isHorizontal" format="boolean" />
        <attr name="speed" format="integer" />
        <attr name="text" format="string" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="times" format="integer" />
        <attr name="isScrollForever" format="boolean" />
    </declare-styleable>
</resources>