<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#00000000">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/title_return_image"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:textSize="14sp"
        android:visibility="visible"
        app:srcCompat="@mipmap/left_white" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_return_text"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:text="@string/btn_return"
        android:textColor="#171717"
        android:textSize="14sp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="1"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="#100F0F"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/title_more"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/keyboard_control"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_affirm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/btn_affirm"
        android:textColor="#171717"
        android:textSize="14sp"
        android:visibility="gone" />

</FrameLayout>